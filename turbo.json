{
    "globalDependencies": [".env"],
    "pipeline": {
        "build": {
            "outputs": ["dist/**", "build/**"],
            "dependsOn": ["lint"],
            "inputs": ["src/**/*.ts"],
            "env": ["NODE_ENV"]
        },
        "dev": {
            "cache": false
        },
        "lint": {
            "inputs": ["src/**/*.ts"],
            "outputs": []
        },
        "coverage": {
            "inputs": ["src/**/*.ts"],
            "outputs": ["coverage/**"]
        },
        "test": {
            "outputs": [],
            "inputs": ["src/**/*.ts", "__tests__/**/*.ts"]
        }
    }
}
